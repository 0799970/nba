{
  "name": "nba",
  "version": "0.4.1",
  "description": "A Node.js wrapper around the NBA's API",
  "repository": "https://github.com/nickb1080/nba.git",
  "main": "index.js",
  "scripts": {
    "update-teams": "node ./scripts/teams",
    "update-players": "node ./scripts/players",
    "update-data": "npm run update-teams && npm run update-players",
    "clear-data": "node ./scripts/clear-data",
    "test": "mocha --timeout 30000 -R spec ./test/**/*.js",
    "lint": "eslint ./src",
    "babel": "babel src --out-dir lib2 --stage 0",
    "test-unit": "npm run babel; mocha --recursive ./test/setup.js ./test/unit/"
  },
  "author": "Nick Bottomley",
  "license": "MIT",
  "dependencies": {
    "browserify": "^9.0.3",
    "jsonp": "^0.2.0",
    "lodash.contains": "^2.4.1",
    "lodash.find": "^3.2.0",
    "lodash.findwhere": "^3.1.0",
    "lodash.indexby": "^3.1.1",
    "lodash.invert": "^3.0.0",
    "lodash.partial": "^3.1.0",
    "lodash.pick": "^3.1.0",
    "object-assign": "^2.0.0",
    "request": "^2.42.0"
  },
  "browser": {
    "./lib/get-json.js": "./lib/get-jsonp.js",
    "./src/get-json.js": "./src/get-jsonp.js"
  },
  "browserify": {},
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.1",
    "babelify": "^6.3.0",
    "chai": "^1.9.1",
    "coveralls": "^2.11.4",
    "eslint": "^1.3.1",
    "istanbul": "^0.3.19",
    "mocha": "^1.21.4",
    "must": "^0.12.0",
    "node-static": "^0.7.7",
    "openurl": "^1.1.0",
    "sinon": "^1.10.3",
    "sinon-chai": "^2.5.0",
    "uglify-js": "^2.4.15"
  }
}
